<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.purchaselist"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
	<uses-permission android:name="android.permission.INTERNET"/>
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:name="com.purchaselist.PurchasesApp"
        android:theme="@style/AppTheme" >
        
        <service android:name="com.rest.ExportIntentService"/>
        
        <activity
            android:name="com.purchaselist.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
        </activity>
        
        <activity
            android:name="com.purchaselist.PrefActivity"
            android:label="@string/prefAct">
             <intent-filter>
                <category android:name="android.intent.category.PREFERENCE" />
            </intent-filter>     
        </activity>
        
        <activity
            android:name="com.purchaselist.ListsActivity"
            android:label="@string/listsAct">
            <intent-filter>
                <action android:name="com.purchaselist.action.LIST_SELECT" />
                <category android:name="android.intent.category.DEFAULT" />         
            </intent-filter>
        </activity>    
        
    </application>
				      
</manifest>